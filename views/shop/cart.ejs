<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

        <h1>Total Price = <%= totalPrice %>Rs</h1>

        <% if (products.length > 0) { %>
            <div class="grid">
                <% for (let prod of products) { %>

                    <article class="card product-item">

                        <header class="card__header">
                            <h1 class="product__title">
                                <%= prod.title %>
                            </h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= prod.imageUrl %>" alt="<%= prod.title %>">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price"><%= prod.price %>Rs</h2>
                            <p class="product__description">
                                <%= prod.description %>
                            </p>
                            <h2 class="product__qty">Qty : <%= prod.qty %></h2>
                        </div>
                        <div class="card__actions">
                            <form action="/delete-cart-product" method="POST">
                                <input type="hidden" value="<%= prod._id %>" name="cartProd_id">
                                <button class="btn" type="submit">Delete</button>
                            </form>
                        </div>

                    </article>

                <% } %>
            </div>
            <% } else { %>
                <h1>No Products Added To Cart!</h1>
                <% } %>
            

        <%- include('../includes/end.ejs') %>