<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/reset.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <br>
        <% if (errMessage) { %>
            <div class="user-message user-message--error"><%= errMessage %></div>
        <% } %>
        <br>
        <form action="/reset-pass" method="post">
          <div class="row">
            <h1>Forgot Password</h1>
            <h6 class="information-text">Enter your registered email to reset your password.</h6>
            <div class="form-group">
              <input type="email" name="resetEmail" id="user_email">
              <p><label for="username">Email</label></p>
              <button type="submit" onclick="showSpinner()">Reset Password</button>
            </div>
            <div class="footer">
              <h5> <a href="/login">Go back to Sign In age</a></h5>
              <p class="information-text"></p>
            </div>
          </div>
        </form>
        
    </main>
<%- include('../includes/end.ejs') %>